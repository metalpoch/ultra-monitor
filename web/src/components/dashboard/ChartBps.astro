---
import TrafficBps from "./ui/TrafficChartBps";
const { data, err } = Astro.props;
---

<section
  class="flex flex-col flex-1 sm:flex-2 px-6 py-3 rounded-lg bg-[#121b31] border-2 border-[hsl(217,33%,20%)]"
>
  <h class="text-2xl font-semibold">Tráfico de Red</h>
  <p class="text-slate-400 text-sm">
    Monitoreo del tráfico de entrada y salida.
  </p>
  <TrafficBps data={data} client:load />
</section>
