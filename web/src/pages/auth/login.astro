---
import { Image } from "astro:assets";
import LoginForm from "../../components/auth/LoginForm";
import Layout from "../../layouts/Login.astro";
import logo from "../../assets/logo.svg";
---

<Layout>
  <main
    class="lg:w-1/3 md:w-1/2 p-5 flex flex-col gap-5 content-center rounded bg-[#121b31] border-2 border-[hsl(217,33%,20%)]"
  >
    <div>
      <Image
        src={logo}
        width={200}
        height={200}
        alt="Logo de Ultra Monitor"
        class="m-auto"
      />
      <h1 class="text-3xl text-center">Gestor Ultra</h1>
      <h2 class="text-center text-slate-400">Iniciar sesi√≥n en tu cuenta</h2>
    </div>
    <LoginForm client:visible />
  </main>
</Layout>

<script is:inline>
  const token = sessionStorage.getItem("access_token");
  if (token) {
    window.location.href = "/";
  }
</script>
