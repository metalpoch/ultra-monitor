---
import Layout from "../layouts/Layout.astro";
import Form from "../components/trend/Form";
import Chart from "../components/trend/Chart";
import Metrics from "../components/trend/Metrics";
---

<Layout title="Tendencia">
  <main class="w-full flex flex-col gap-5 px-10">
    <section class="w-full flex flex-col lg:flex-row gap-5 p-4 rounded-lg bg-[#121b31] border-2 border-[hsl(217,33%,20%)] text-white">
      <aside class="w-full lg:w-[280px] shrink-0">
        <Form client:only />
      </aside>
      <section class="flex flex-col flex-1 gap-4 min-w-0">
        <div class="w-full h-96">
          <Chart client:only />
        </div>
        <Metrics client:only />
      </section>
    </section>
  </main>
</Layout>
